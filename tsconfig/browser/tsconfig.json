{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "./../../dist/types",
        "outDir": "./../../compiled",
        "typeRoots": [
            "./../../node_modules/@types"
        ]
    },
    "include": [
        "./../../src"
    ],
    "exclude": [
        "./../../node_modules",
        "./../../dist",
        "./../../src/examples"
    ]
}
